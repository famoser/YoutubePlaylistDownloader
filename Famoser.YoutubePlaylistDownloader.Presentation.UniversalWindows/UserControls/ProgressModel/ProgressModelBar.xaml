<UserControl
    x:Class="Famoser.YoutubePlaylistDownloader.Presentation.UniversalWindows.UserControls.ProgressModel.ProgressModelBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Famoser.YoutubePlaylistDownloader.Presentation.UniversalWindows.UserControls.ProgressModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Famoser.YoutubePlaylistDownloader.Presentation.UniversalWindows.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >
    
    <UserControl.Resources>
        <converters:ProgressVisibilityServiceConverter x:Key="ProgressVisibilityServiceConverter" />
    </UserControl.Resources>

    <Grid Visibility="{Binding ProgressService, Converter={StaticResource ProgressVisibilityServiceConverter}}">
        <ProgressBar Value="{Binding ProgressService.PercentageProgressActiveValue, Mode=TwoWay}" VerticalAlignment="Top" Maximum="{Binding ProgressService.PercentageProgressMaxValue}" Minimum="0" IsIndeterminate="{Binding ProgressService.IndeterminateProgressActive}"/>
    </Grid>
</UserControl>
